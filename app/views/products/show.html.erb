<p id="notice"><%= notice %></p>

<style>
  .container{
    width:425px;
  }
</style>

<div class="show_content">

  <div style="float:left; margin: 0 auto;" class="show_product_img">
    <%= image_tag @product.image, width: "200" %>
  </div>

  <div style="float:right;" class="show_product_info">
    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @product.price %>
    </p>

    <p>
      <strong>Quantity:</strong>
      <%= @product.quantity %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>

    <p>
      <strong>Brand:</strong>
      <%= @product.brand %>
    </p>

    <p>
      <strong>Rating:</strong>
      <%= @product.rating %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= @product.category_id %>
    </p>

    <% if can? :update, @product %>
      <td><%= link_to 'Edit', edit_product_path(@product) %></td> |
    <% end %>
    <%= link_to 'Back', products_path %>

  </div>
</div>
